{
  "manifest_version": 3,
  "name": "Auto Dark Theme",
  "version": "1.0",
  "description": "Extension that automatically applies a dark theme to websites to reduce eye strain",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>",
    "https://api.openai.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Configuration - Quiz Auto-Responder"
  }
}
